{% extends 'base.html.twig' %}

{% block title %}Liste des sorties{% endblock %}

{% block body %}

    <h3 class="titre_listes_sorties">Liste des sorties</h3>

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-md-12 col-sm-12">
                <section>
                    <h6>Date du jour : {{ "now"|date("d/m/Y") }} </h6>
                    <h6>Organisateur : {{ app.user.prenom }} {{ app.user.nom }}</h6>
                </section>
                <br/>
                <h6>Recherche d'une sortie</h6>
                {{ form_start(form) }}
                <div class="input-field col s12">
                    {{ form_widget(form.nom,{'attr': {'class': 'validate'}}) }}
                    {{ form_label(form.nom) }}
                    {{ form_errors(form.nom) }}
                </div>
                <div class="row">
                    <div class="input-field col s2">
                        {{ form_widget(form.debutSortie,{'attr': {'class': 'datepicker','name': 'debut'}} )}}
                    </div>
                    <div class="input-field col s2">
                        {{ form_widget(form.finSortie,{'attr': {'class': 'datepicker'}} )}}
                    </div>
                </div>
                {{ form_row(form.campus) }}
                <br/>
                <br/>
                {{ form_row(form.organisateur) }}
                <br/>
                {{ form_row(form.inscrit) }}
                <br/>
                {{ form_row(form.non_inscrit) }}
                <br/>
                {{ form_row(form.sorties_passees) }}
                <br/>
                <button type="submit" class="btn btn-primary">Rechercher</button>
                <a href="{{ path('sorties_liste') }}">
                    {{ form_end(form) }}
                    <button class="btn waves-effect waves-light">Effacer les filtres</button>
                </a>

                <a href="{{ path('sorties_creer') }}">
                    <button class="btn waves-effect waves-light">Créer une sortie</button>
                </a>
                <br/>

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Campus</th>
                        <th>Date de la sortie</th>
                        <th>Clôture</th>
                        <th>Inscrits/Places</th>
                        <th>État</th>
                        <th>Inscrit</th>
                        <th>Organisateur</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for sortie in sorties %}
                        <tr>
                            <td>{{ sortie.nom }}</td>
                            <td>{{ sortie.campus.nom }}</td>
                            <td>{{ sortie.debutSortie|date('d/m/Y H:i') }}</td>
                            <td>{{ sortie.dateLimiteInscription|date('d/m/Y') }}</td>
                            <td>{{ sortie.participants|length }}/{{ sortie.nombreInscriptionsMax }}</td>
                            <td>
                                {{ sortie.etat == 1 ? 'En création' :
                                sortie.etat == 2 ? 'Ouvert' :
                                sortie.etat == 3 ? 'Fermé' :
                                sortie.etat == 4 ? 'En cours' :
                                sortie.etat == 5 ? 'Annulé' :
                                sortie.etat == 6 ? 'Passé' :
                                sortie.etat == 7 ? 'Archivé' : '' }}
                            </td>
                            <td>
                                {% if app.user in sortie.participants %}
                                    x
                                {% endif %}
                            </td>
                            <td>{{ sortie.organisateur.nom }}</td>
                            <td class="icon_sorties">
                                {% if sortie.etat == 1 %}
                                    <a href="{{ path('accueil', {'id': sortie.id}) }}" class="btn-floating blue"><i class="material-icons">mode_edit</i></a>
                                {% endif %}
                                <a href="{{ path('sorties_detail', {'id': sortie.id}) }}" class="btn-floating blue"><i class="material-icons">zoom_in</i></a>
                                {% if app.user in sortie.participants and sortie.etat == 2 %}
                                    <a href="{{ path('sorties_desistement', {'id': sortie.id}) }}" class="btn-floating red"><i class="material-icons">remove</i></a>&nbsp;
                                {% endif %}
                                {% if app.user not in sortie.participants and sortie.etat == 2 %}
                                    <a href="{{ path('sorties_sinscrire', {'id': sortie.id}) }}" class="btn-floating green"><i class="material-icons">add</i></a>&nbsp;
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}





