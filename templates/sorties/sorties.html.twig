{% extends 'base.html.twig' %}

{% block title %}Liste des sorties{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-md-12 col-sm-12">
                {{ form_start(form) }}
                {{ form_row(form.nom) }}
                {{ form_row(form.debutSortie) }}
                {{ form_row(form.finSortie) }}
                {{ form_row(form.campus) }}
                {{ form_row(form.organisateur) }}
                {{ form_row(form.inscrit) }}
                {{ form_row(form.non_inscrit) }}
                {{ form_row(form.sorties_passees) }}
                <button type="submit" class="btn btn-primary">Rechercher</button>
                <a href="{{ path('_sorties') }}" class="btn btn-secondary">Effacer les filtres</a>
                {{ form_end(form) }}
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Campus</th>
                        <th>Début de la sortie</th>
                        <th>Inscrits/Places</th>
                        <th>État</th>
                        <th>Inscrit</th>
                        <th>Organisateur</th>
                        <th>Participants</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for sortie in sorties %}
                        <tr>
                            <td>{{ sortie.nom }}</td>
                            <td>{{ sortie.campus.nom }}</td>
                            <td>{{ sortie.debutSortie|date('d/m/Y H:i') }}</td>
                            <td>{{ sortie.participants|length }}/{{ sortie.nombreInscriptionsMax }}</td>
                            <td>{{ sortie.etat }}</td>
                            <td>
                                {% if app.user in sortie.participants %}
                                    x
                                {% endif %}
                            </td>
                            <td>{{ sortie.organisateur.nom }}</td>
                            <td>
                                {% for participant in sortie.participants %}
                                    {{ participant.nom }}<br>
                                {% endfor %}
                            </td>
                            <td>
                                <a href="{{ path('sorties_test', {'id': sortie.id}) }}" class="btn btn-primary btn-sm">Afficher</a>
                                {% if app.user in sortie.participants %}
                                    <a href="{{ path('sorties_test', {'id': sortie.id}) }}" class="btn btn-danger btn-sm">Se désister</a>
                                {% else %}
                                    &nbsp;
                                {% endif %}
                            </td>

                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}



